{
  "name": "claude-capsule-kit",
  "version": "3.0.0",
  "type": "module",
  "description": "Claude Capsule Kit - Context memory for Claude Code",
  "bin": {
    "cck": "./bin/cck.js"
  },
  "files": [
    "bin/",
    "hooks/",
    "tools/",
    "!tools/*/bin/",
    "!tools/**/*.go",
    "!tools/**/go.mod",
    "!tools/**/go.sum",
    "!tools/**/Makefile",
    "!tools/*/testdata/",
    "!tools/*/test.sh",
    "!tools/progressive-reader/install.sh",
    "lib/",
    "crew/lib/",
    "agents/",
    "skills/",
    "commands/",
    "scripts/postinstall.js",
    "scripts/show-*.sh",
    "docs/AGENT_ROUTING_GUIDE.md",
    "docs/AGENT_TEAMS_WORKTREE_MODE.md",
    "docs/BEST_PRACTICES.md",
    "docs/SUPER_CLAUDE_SYSTEM_ARCHITECTURE.md",
    "docs/SKILLS_ORCHESTRATION_ARCHITECTURE.md",
    "docs/CAPSULE_DEGRADATION_RCA.md",
    "docs/TOOL_ENFORCEMENT_REFERENCE.md",
    "templates/"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "blink-query": "latest"
  },
  "scripts": {
    "postinstall": "node scripts/postinstall.js"
  }
}
